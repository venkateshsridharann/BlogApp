 <% include ./partials/header %>
<div class=" ui main text container segment" style="color:black" >
    <div class= "ui huge header"> <%= blog.title%></div> 
        <div class= "ui top attached">
            <div class= "item">
                <img class="ui centered rounded image"src="<%=blog.image%>">
                 <div class= "content">
                        <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- blog.body %></p>
            </div>
              <a class="ui blue button" style="float:right;text-align:center" href="/blogs/<%=blog._id%>/edit">Edit</a>
            <form class="inline" action="/blog/<%=blog._id%>?_method=DELETE" method="POST">
                <button class="ui red inverted icon button" style="text-align:center"><i class="trash alternate outline icon"></i></button>
            </form>    
        </div>
    </div>    
</div>

<% include ./partials/footer %>